<%- include('../../layouts/layout_start', {title}) %>


<h1><%= title %></h1>
<a class="btn btn-sm btn-primary" href="/books/add">Добавить новую книгу</a>

    <% if(data && data.length) { %>

        <table class="table table-striped table-sm  mt-3">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Заголовок</th>
                <th scope="col">Авторы</th>
                <th scope="col">Число скачиваний</th>
                <th scope="col" class="text-right">Действия</th>
            </tr>
            </thead>
            <tbody>
    
                <% data.map((el, idx) => {  %>
                    <tr>
                        <th scope="row"><%= idx +1 %></th>
                        <td><a href="/books/<%= el.id %>"><%= el.title %></td>
                        <td><%= el.authors %></td>
                        <td><span title="<%= el.counter.datetime %>"><%= el.counter.counter %></span></td>
                        <td class="text-right">
                            <a class="btn btn-sm btn-success" href="/books/<%= el.id %>">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                            </a>
                            <a class="btn btn-sm btn-primary" href="/books/edit/<%= el.id %>">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </a>
                            <form action="/books/delete/<%= el.id %>" method="POST" class="d-inline">
                                <button class="btn btn-sm btn-danger">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
    
            </tbody>
        </table>

    <% } else { %>   
        <h3 class="mt-5">Записей пока нет</h3>
    <% } %>    



<%- include('../../layouts/layout_end') %>
