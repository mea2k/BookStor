<form method="POST" class="mt-5" enctype="multipart/form-data" contentType = 'w-xxx-form-urlencoded'>
    <div class="form-group">
        <label for="inputTitle">Заголовок</label>
        <input type="text"
               value="<%= data.title %>"
               name="title"
               class="form-control"
               id="inputTitle">
    </div>

    <div class="form-group">
        <label for="inputDesc">Описание</label>
        <textarea
                rows="3"
                name="description"
                class="form-control"
                id="inputDesc"
        ><%= data.description %></textarea>
    </div>

    <div class="form-group">
        <label for="inputAuthors">Авторы</label>
        <input type="text"
               value="<%= data.authors %>"
               name="authors"
               class="form-control"
               id="inputAuthors">
    </div>

    <div class="form-group">
        <label for="inputFileBook">Файл</label>
        <input type="file"
               value="<%= data.fileBook %>"
               name="fileBook"
               class="form-control"
               id="inputFileBook">
    </div>

    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary"><%= action %></button>
    </div>
</form>